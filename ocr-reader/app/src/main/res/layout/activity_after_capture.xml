<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.google.android.gms.samples.vision.ocrreader.AfterCaptureActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="530dp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="77dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            app:srcCompat="@drawable/check" />

        <Button
            android:id="@+id/AnotherPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Take Another Photo" />

        <TextView
            android:id="@+id/TitleText"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_below="@+id/icon"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:text="The product is Mom-Safe"
            android:textColor="#4EB98C"
            android:textSize="30sp" />

        <Button
            android:id="@+id/TextToSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/AnotherPicture"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="9dp"
            android:background="@drawable/rounded_btn"
            android:text="More details" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"
            android:layout_marginBottom="134dp"
            android:background="#F1ECEC"
            android:numStars="5"
            android:rating="4.5" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="141dp"
            android:layout_height="144dp"
            android:layout_alignBottom="@+id/AnotherPicture"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="117dp"
            android:layout_marginRight="117dp"
            android:layout_marginBottom="187dp"
            app:srcCompat="@drawable/yogurt" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
